<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EC9AF3"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fl_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom1">
    </FrameLayout>

    <ImageView
        android:id="@+id/noTasksIcon"
        android:layout_marginTop="280dp"
        android:layout_marginHorizontal="120dp"
        android:layout_width="162dp"
        android:layout_height="156dp"
        android:background="@drawable/no_tasks_icon" />

    <TextView
        android:id="@+id/smthNoText"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="85dp"
        android:layout_marginTop="430dp"
        android:text="Какой-то текст"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/addingTask"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="600dp"
        android:layout_marginBottom="4dp"
        android:background="#CEAFCF"
        android:contentDescription="Добавить задачу"
        android:src="@drawable/plus" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom1"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navigation_bar_background"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:menu="@menu/nav_menu"/>

</RelativeLayout>