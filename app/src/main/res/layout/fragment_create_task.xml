<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/creating_frag"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#EC9AF3"
    android:layout_height="match_parent">


    <!--НАЗВАНИЕ ЗАДАЧИ-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#7A5669"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@id/horTopGl"
        app:layout_constraintStart_toStartOf="@id/verLeftGl"
        app:layout_constraintEnd_toStartOf="@id/verRightGl">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/task_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите название задачи"
            android:gravity="center"
            android:paddingHorizontal="55dp"
            android:textSize="20sp"
            android:textColor="@color/white"/>

    </androidx.cardview.widget.CardView>


    <!--ОПИСАНИЕ ЗАДАЧИ-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#7A5669"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        app:layout_constraintStart_toStartOf="@id/cardView"
        app:layout_constraintEnd_toEndOf="@id/cardView">


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/task_description_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Введите описание задачи"
            android:lines="4"
            android:textColor="@color/white"
            android:textSize="20sp" />

        </androidx.cardview.widget.CardView>


    <!--ВРЕМЯ ВЫПОЛНЕНИЯ-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        app:cardBackgroundColor="#7A5669"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="@id/cardView2"
        app:layout_constraintStart_toStartOf="@id/verLeftGl"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <Button
                android:id="@+id/btn_start_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:text="Указать сроки"
                android:textColor="@color/white" />

        <Button
                android:id="@+id/btn_end_time"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textColor="@color/white"
                android:visibility="gone" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save_task_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#BC4C71F4"
        android:text="Добавить задание"
        android:textColor="@color/white"

        app:layout_constraintBottom_toBottomOf="@id/horButtomGl"
        app:layout_constraintEnd_toEndOf="@id/cardView3"
        app:layout_constraintStart_toStartOf="@id/cardView3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horTopGl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="37dp"></androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horButtomGl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95">
    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verLeftGl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06">
    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verRightGl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94">
    </androidx.constraintlayout.widget.Guideline>


</androidx.constraintlayout.widget.ConstraintLayout>